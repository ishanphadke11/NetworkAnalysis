{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Parser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Parser",  // Points to the Parser executable in the root directory
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",  // Replace with your build task if needed
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "/usr/bin/lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:/path/to/gdb.exe"
            }
        }
    ]
}